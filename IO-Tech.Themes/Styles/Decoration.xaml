<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SectionBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SectionBackground}" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="MinHeight" Value="40" />
    </Style>

    <Style x:Key="VerticalSeparatorBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource DividerBackground}" />
        <Setter Property="CornerRadius" Value="1" />
        <Setter Property="Width" Value="2" />
        <Setter Property="Margin" Value="0,10" />
        <Setter Property="Opacity" Value="0.2" />
    </Style>
</ResourceDictionary>